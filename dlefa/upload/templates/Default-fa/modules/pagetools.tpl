[available=cat|lastnews|date|allnews]
<div id="combo-tools" class="pagetools">
	<div class="pagetools_in">
		<div class="sortbar">
			<div class="sortbar_in">
				[sort]<span class="sort_label">چیدمان :</span>{sort}[/sort]
			</div>
		</div>
		<div class="breadcrumb">
			<div class="breadcrumb_in">
				{speedbar}
			</div>
			<a class="pagetools_back" href="/">
				<svg class="icon icon-left"><use xlink:href="#icon-right"></use></svg>
				<span class="title_hide">صفحه نخست</span>
			</a>
		</div>
	</div>
</div>
[/available]
[not-available=cat|lastnews|date|allnews|main]
<div class="pagetools">
	<div class="pagetools_in">
		<div class="breadcrumb">
			<div class="breadcrumb_in">
			{speedbar}
			</div>
			<a class="pagetools_back" href="/">
				<svg class="icon icon-left"><use xlink:href="#icon-right"></use></svg>
				<span class="title_hide">صفحه نخست</span>
			</a>
		</div>
	</div>
</div>
[/not-available]